<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
  <display-name>thakkali</display-name>
  
  <servlet>
  	<servlet-name>register</servlet-name>
  	<servlet-class>com.thakkali.control.RegisterServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>register</servlet-name>
  	<url-pattern>/register</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>login</servlet-name>
  	<servlet-class>com.thakkali.control.LoginServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>login</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>hotel</servlet-name>
  	<servlet-class>com.thakkali.control.RegisterHotelServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>hotel</servlet-name>
  	<url-pattern>/register_hotel</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>add-food</servlet-name>
  	<servlet-class>com.thakkali.control.FoodsAddServlet</servlet-class>
  	<init-param>
  		<param-name>food_image_src</param-name>
  		<param-value>/thakkali/webapp/client_resourses/images/food_images</param-value>
 	</init-param>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>add-food</servlet-name>
  	<url-pattern>/add_food</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>delete-food</servlet-name>
  	<servlet-class>com.thakkali.control.FoodsDeleteServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>delete-food</servlet-name>
  	<url-pattern>/delete_food</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>order-food</servlet-name>
  	<servlet-class>com.thakkali.control.OrderFoodServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>order-food</servlet-name>
  	<url-pattern>/order_foods</url-pattern>
  </servlet-mapping>
 
  <servlet>
  	<servlet-name>place-order</servlet-name>
  	<servlet-class>com.thakkali.control.PlaceOrderServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>place-order</servlet-name>
  	<url-pattern>/place_order</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>take-back</servlet-name>
  	<servlet-class>com.thakkali.control.TakeBackServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>take-back</servlet-name>
  	<url-pattern>/take_back</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>search-food</servlet-name>
  	<servlet-class>com.thakkali.control.SearchFoodServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>search-food</servlet-name>
  	<url-pattern>/search_food</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>increase-food</servlet-name>
  	<servlet-class>com.thakkali.control.IncreaseFoodServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>increase-food</servlet-name>
  	<url-pattern>/increase_food</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>get-food</servlet-name>
  	<servlet-class>com.thakkali.control.GetFoodServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>get-food</servlet-name>
  	<url-pattern>/get_food</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>get-food-page</servlet-name>
  	<servlet-class>com.thakkali.control.GetFoodPaginatedServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>get-food-page</servlet-name>
  	<url-pattern>/get_food_page</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>checkout-food</servlet-name>
  	<servlet-class>com.thakkali.control.CheckoutServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>checkout-food</servlet-name>
  	<url-pattern>/checkout</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>get-order-history</servlet-name>
  	<servlet-class>com.thakkali.control.GetOrderDetailsServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>get-order-history</servlet-name>
  	<url-pattern>/get_order_history</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
</web-app>